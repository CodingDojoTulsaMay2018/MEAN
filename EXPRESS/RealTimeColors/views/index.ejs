<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>Survey</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"> 
</head>
<body>
    <div class="container">


        <div id="colorBox" >
            <div class="row">

                <div class="col-sm">
                    <form id="green" method='post'>
                            <input type='submit' style="background-color: green"class="btn btn-success btn-lg" value='Green'>
                    </form>
                </div>

                <div class="col-sm">
                    <form id="blue" method='post'>
                            <input type='submit'style="background-color: blue;" class="btn btn-primary btn-lg"value='Blue'>
                    </form>
                </div> 

                <div class="col-sm">
                    <form id="pink" method='post'>
                            <input type='submit' class="btn btn-primary btn-lg" style="background-color: pink;" value='Pink'>
                    </form>
                </div>         
            </div>
        </div>
  
    </div>
</body>
<style>
    form{
    position: relative;
    left: 35%;
    margin-top: 50px;
}
#colorBox{
    
    height: 300px;
}
</style>
<script>
    $(document).ready(function (){
    
    var socket = io(); //1

    $('#green').submit(function(event){
        event.preventDefault();
        socket.emit('green')
    })
    $('#blue').submit(function(event){
        event.preventDefault();
        socket.emit('blue')
    })
    $('#pink').submit(function(event){
        event.preventDefault();
        socket.emit('pink')
    })

    socket.on('color_change',function (data){
 
        $("#colorBox").css("background-color",`${data.color}`)
        
       
    })



 })

</script>
</html>